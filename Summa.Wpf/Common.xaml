<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Geometry x:Key="UpArrowGeometry">M0,5 L4.5,.5 9,5 6,5 4.5,3.5 3,5 z</Geometry>
    <Geometry x:Key="DownArrowGeometry">M0,0 L3,0 4.5,1.5 6,0 9,0 4.5,4.5 z</Geometry>

    <Path x:Key="UpArrowPath"
          Stroke="Black"
          Fill="Black"
          Data="{StaticResource UpArrowGeometry}"/>

    <Path x:Key="DownArrowPath"
          Stroke="Black"
          Fill="Black"
          Data="{StaticResource DownArrowGeometry}"/>

    <Style x:Key="UpRepeatButtonStyle"
           TargetType="{x:Type RepeatButton}">

        <Setter Property="Content" Value="{StaticResource UpArrowPath}"/>
        <Setter Property="DockPanel.Dock" Value="Top" />

    </Style>

    <Style x:Key="DownRepeatButtonStyle"
           TargetType="{x:Type RepeatButton}">

        <Setter Property="Content" Value="{StaticResource DownArrowPath}"/>
        <Setter Property="DockPanel.Dock" Value="Bottom" />

    </Style>

</ResourceDictionary>