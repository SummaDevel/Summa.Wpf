<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Summa.Wpf" >

    <ResourceDictionary.MergedDictionaries>

        <ResourceDictionary Source="/Summa.Wpf;component/Common.xaml"/>

    </ResourceDictionary.MergedDictionaries>
        
    <Style TargetType="{x:Type local:Spinner}">

        <Setter Property="Template">

            <Setter.Value>

                <ControlTemplate>

                    <DockPanel>
                        
                        <RepeatButton x:Name="PART_UpRepeatButton"
                                      Style="{StaticResource UpRepeatButtonStyle}"/>

                        <RepeatButton x:Name="PART_DownRepeatButton"
                                      Style="{StaticResource DownRepeatButtonStyle}"/>

                    </DockPanel>                        

                </ControlTemplate>

            </Setter.Value>

        </Setter>

    </Style>

</ResourceDictionary>